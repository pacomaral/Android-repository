<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paco.pasandoparametros.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="350dp"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintVertical_bias="0.112"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/textoNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre:  "
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="33dp" />

        <EditText
            android:id="@+id/cajaNombre"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="55dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="244dp"
        android:layout_height="86dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.547"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/botonEnviar"
            android:layout_width="127dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Enviar datos"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="293dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.825"
        app:layout_constraintHorizontal_bias="0.504"
        tools:layout_editor_absoluteX="34dp">

        <TextView
            android:id="@+id/textoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="111dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294">

        <TextView
            android:id="@+id/textoSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sexo:"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="116dp" />

        <RadioGroup
            android:id="@+id/grupo1"
            android:layout_width="233dp"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="152dp">

            <RadioButton
                android:id="@+id/opcionHombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Hombre"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/opcionMujer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mujer"
                android:textSize="18sp" />

        </RadioGroup>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
